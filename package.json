{
    "name": "express-vue-renderer",
    "version": "0.6.4",
    "description": "Rendering Engine for turning Vue files into Javascript Objects",
    "homepage": "https://github.com/express-vue/express-vue-renderer",
    "author": {
        "name": "Daniel Cherubini",
        "email": "daniel@cherubini.casa",
        "url": "https://github.com/express-vue"
    },
    "files": [
        "lib"
    ],
    "main": "lib/index.js",
    "keywords": [
        "vue",
        "renderer",
        "vuejs",
        "node",
        "nodejs"
    ],
    "ava": {
        "files": [
            "tests/**/*.js"
        ],
        "source": [
            "src/**/*.js",
            "!lib/**/*"
        ],
        "concurrency": 5,
        "failFast": false,
        "powerAssert": false,
        "require": [
            "babel-register"
        ],
        "babel": "inherit"
    },
    "nyc": {
        "include": [
            "src/**/*.js"
        ],
        "exclude": [
            "src/models/index.js",
            "src/parser/index.js",
            "src/renderer/index.js",
            "src/utils/index.js",
            "**/*.vue"
        ]
    },
    "scripts": {
        "flow": "flow",
        "debug": "npm run build && node --inspect example/app.js",
        "start": "npm run build && node example/app.js",
        "prepublish": "npm run build && nsp check",
        "pretest": "eslint . --fix",
        "test": "eslint src && nyc ava",
        "clean": "rm -rf lib",
        "coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
        "babel-flow": "babel src --out-dir lib --source-maps inline",
        "build": "npm run clean && npm run babel-flow && cp src/index.d.ts lib/index.d.ts && cp src/index.js.flow lib/index.js.flow",
        "preversion": "npm test",
        "version": "npm run build && git add -A",
        "postversion": "git push && git push --tags"
    },
    "repository": "express-vue/express-vue-renderer",
    "license": "Apache-2.0",
    "dependencies": {
        "babel-eslint": "^7.2.3",
        "babel-preset-es2015": "^6.24.1",
        "camel-case": "^3.0.0",
        "clean-css": "^4.1.7",
        "deepmerge": "^1.5.1",
        "html-minifier": "^3.5.3",
        "lru-cache": "^4.1.1",
        "pug": "^2.0.0-rc.3",
        "require-from-string": "^1.2.1",
        "string-hash": "^1.1.3",
        "vue": "^2.4.2",
        "vue-server-renderer": "^2.4.2",
        "vue-template-compiler": "^2.4.2",
        "xss": "^0.3.3"
    },
    "devDependencies": {
        "ava": "^0.22.0",
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-flow-strip-types": "^6.22.0",
        "babel-preset-env": "^1.6.0",
        "babel-preset-flow": "^6.23.0",
        "codecov": "^2.3.0",
        "coveralls": "^2.13.1",
        "eslint": "^4.5.0",
        "eslint-config-xo-space": "^0.16.0",
        "eslint-plugin-flowtype": "^2.35.0",
        "express": "^4.15.4",
        "flow-bin": "^0.53.0",
        "flow-remove-types": "^1.2.1",
        "jest": "^20.0.4",
        "jest-cli": "^20.0.0",
        "nodemon": "^1.11.0",
        "nsp": "^2.7.0",
        "nyc": "^11.1.0",
        "uuid": "^3.1.0"
    }
}
